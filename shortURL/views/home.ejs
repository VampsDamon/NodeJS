<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Server Page</title>
  </head>
  <body>
    <h1>URL Shortener</h1>
    <% if (locals.id) { %>
    <p>URL Generated : http://localhost/8001/url/<%=id%></p>
    <% } %>
    <div class="form">
      <form method="post" action="/url">
        <div>
          <label for="">Enter Your URL: </label>
          <input type="text" name="url" placeholder="http://example.com" />
          <button type="submit">Generate</button>
        </div>
      </form>
    </div>
    <% if (locals.urls) { %>
    <table>
      <tr>
        <thead>
          <th>S No.</th>
          <th>ShortID</th>
          <th>Redirect URL</th>
          <th>Clicks</th>
        </thead>
      </tr>
      <tbody>
        <% urls.forEach((url,index) => { %>
        <tr>
          <td><%=index+1 %></td>
          <td><%=url.shortId %></td>
          <td><%=url.redirectURL %></td>
          <td><%=url.visitHistory.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  </body>
</html>
